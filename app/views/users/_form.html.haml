= bootstrap_form_for(@user,  layout: :horizontal, label_col: "col-sm-2", control_col: "col-sm-6") do |f|
  %header
    %h1 Register
  = f.email_field :email, label: "Email Address"
  = f.password_field :password

  = f.password_field :password_confirmation, label: "Confirm Password"
  = f.text_field :full_name
  - if @invitation_token
    = hidden_field_tag :invitation_token, @invitation_token
  = f.form_group do
    <script src="https://checkout.stripe.com/checkout.js" class="stripe-button" data-key="#{ENV['strip_public_key']}" data-amount="999" data-name="MyFlix Membership Charge" data-description="Forever Memebership($9.99)" data-currency="usd">  </script>
