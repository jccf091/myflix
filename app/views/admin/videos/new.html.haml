%section.admin_add_video
  .container
    .row
      .col-md-10.col-md-offset-1
        = bootstrap_form_for([:admin, @video], :html => {:multipart => true},
          layout: :horizontal, label_col: "col-sm-3", control_col: "col-sm-6") do |f|

          %ul.nav.nav-tabs
            %li
              = link_to "Recent Payments", admin_payments_path
            %li.active
              = link_to "Add a New Video", new_admin_video_path
          %br
          %fieldset
            = f.text_field :title
            = f.select :category_id, options_for_select(Category.all.map{|category| [category.name, category.id]})
            = f.text_area :description, rows: 8
            = f.file_field :cover_image, lable: "Image Cover"
            = f.hidden_field :cover_image_cache
            = f.text_field :remote_cover_image_url, label: "Or Image Cover Url"
            = f.file_field :video_file, lable: "Image Cover"
            = f.hidden_field :video_file_cache
            = f.text_field :remote_video_file_url, label: "Or Video File Url"
            = f.form_group do
              = f.submit "Add Video"
